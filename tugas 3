#include <iostream>
using namespace std;

class Rectangle {
private:
    double length;
    double width;

public:
    void setDimensions(double l, double w) {
        length = l;
        width = w;
    }

    double calculateArea() {
        return length * width;
    }

    void displayArea() {
        double area = calculateArea();
        cout << "Rectangle Area: " << area << endl;
    }
};

int main() {
    Rectangle rectangle;
    rectangle.setDimensions(7.0, 4.0);
    rectangle.displayArea();

    return 0;
}
